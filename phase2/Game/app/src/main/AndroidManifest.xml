<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matchstickmenadventures">

    <application
        android:allowBackup="true"
        android:icon="@drawable/gamelogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gamelogo"
        android:supportsRtl="true"
        android:theme="@style/FullscreenTheme">
        <activity
            android:name="com.group0540.matchstickmenadventures.MainMenuScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_menu_screen"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.group0540.matchstickmenadventures.gamecode.GameActivity"
            android:label="GameActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.group0540.matchstickmenadventures.gamecode.asteroids.AsteroidsActivity"
            android:label="AsteroidsActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.group0540.matchstickmenadventures.gamecode.snake.SnakeActivity"
            android:label="SnakeActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.group0540.matchstickmenadventures.gamecode.matchstickmen.MatchstickMenActivitySinglePlayer"
            android:label="MatchstickMen"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />

        <activity android:name="com.group0540.matchstickmenadventures.gamecode.matchstickmen.MatchstickMenActivityDoublePlayer"
            android:label="MatchstickMenDoublePlayer"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />

        <activity android:name="com.group0540.matchstickmenadventures.leaderboardcode.LeaderboardActivity"
            android:label="LeaderboardActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />

        <activity android:name="com.group0540.matchstickmenadventures.settingscode.SettingsActivity"
            android:label="SettingsActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />

        <activity android:name="com.group0540.matchstickmenadventures.logincode.LoginActivity"
            android:label="LoginActivity"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait"/>

    </application>

</manifest>